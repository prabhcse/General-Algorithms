#include <iostream>

int main()
{
	int n = 0;
	int a = 10;
	
	std::cout<<"\n Give the number:";
	std::cin>>n;
	std::cout<<"\n Give the accuracy (the higher the better and atleast 10):";
	std::cin>>a;
	
	if(n <= 0 || a < 10)
	{
		std::cout<<"\n Error, number or accuracy is incorrect";
		return 1;
	}
	else if (n == 1)
	{
		std::cout<<"\n Square Root:"<<n;
		return 0;
	}
	
	float guess1 = 2;
	
	
	// The number of iterations decide the accuracy
	for(int i = 1; i <= a; i++)
	{
//		std::cout<<"\n Calculating";
		
		// Invarient: square root of a number will have divisor and quotient as same number with remainder zero
		guess1 = (guess1 + n / guess1) / 2;
		
		// Early detection
		if( (guess1*guess1) == n)
		{
			std::cout<<"\n Square Root:"<<guess1;
			return 0;
		}
	}
	
	std::cout<<"\n Square Root:"<<guess1;
	
}
